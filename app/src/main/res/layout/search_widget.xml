<?xml version="1.0" encoding="utf-8"?>
<!-- Note: Widgets don't support ConstraintLayout -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_widget"
    android:layout_width="match_parent"
    android:layout_height="@dimen/search_widget_height"
    android:background="@drawable/rounded_white_corners"
    android:padding="6dp">

    <ImageView
        android:id="@+id/search_widget_brand_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher_round"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/search_widget_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_padding_size_small"
        android:layout_marginEnd="@dimen/margin_padding_size_small"
        android:layout_toStartOf="@id/search_widget_icon"
        android:layout_toEndOf="@id/search_widget_brand_icon"
        android:fontFamily="sans-serif-light"
        android:maxLines="1"
        android:textColor="#9D9E9F"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"
        tools:text="@string/search_widget_text_long" />

    <ImageView
        android:id="@+id/search_widget_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/mozac_ic_search"
        android:tint="#9D9E9F"
        tools:ignore="ContentDescription" />

</RelativeLayout>
